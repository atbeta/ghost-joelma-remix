{{!-- This is the post loop - each post will be output using this markup --}}
<article class="{{post_class}}">
    {{#if feature_image}}
        <a href="{{url}}" title="{{title}}" class="img-holder">
            <img src="{{img_url feature_image}}" alt="{{title}}">
        </a>
    {{/if}}
    <div class="inner">
        {{#if tags}}
            <ul class="tags">
            {{#foreach tags}}
                <li>
                    <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                </li>
            {{/foreach}}
            </ul>
        {{/if}}
        <h2 class="post-title"><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
        <p class="excerpt">{{excerpt words="28"}} ... <a class="read-more" href="{{url}}" title="{{title}}">{{t "read more"}}</a></p>
        <ul class="post-meta">
            <li><time class="post-date" datetime="{{date format="YYYY-MM-DD"}}"><i class="fas fa-calendar-alt"></i> {{date format="YYYY-MM-DD"}}</time></li>
            <li><div class="post-author"><i class="fas fa-user"></i> {{authors}}</div></li>
            <li><div class="post-reading-time"><i class="fas fa-clock"></i> {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div></li>
        </ul>
        {{#if @labs.publicAPI}}
        <a href="#" class="read-later" data-id="{{id}}"><i class="far fa-bookmark" data-toggle="tooltip" data-placement="right" title="{{t "Bookmark article"}}"></i><i class="fas fa-bookmark" data-toggle="tooltip" data-placement="right" title="{{t "Remove bookmark"}}"></i></a>
        {{/if}}
    </div>
</article>
