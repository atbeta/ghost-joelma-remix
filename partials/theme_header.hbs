<header>
    <div class="container">
        <div class="row">
            <div class="col-5 ml-auto">
                <div class="blog-logo">
                    <a href="{{@blog.url}}" title="{{@blog.title}}">
                        {{#if @blog.logo}} <img src="{{@blog.logo}}" alt="{{@blog.title}}" /> {{else}}<span>{{@blog.title}}</span>{{/if}}
                    </a>
                </div>
            </div>
            <div class="col-7">
                <div class="inner">
                    <div class="navigation">
                        <a href="#" class="navigation-trigger">
                            <svg width="19" height="16" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><use xlink:href="#path0_fill" transform="translate(.344 .195)"/><defs><path id="path0_fill" d="M1.044 2.128h15.912c.577 0 1.044-.476 1.044-1.064C18 .477 17.533 0 16.956 0H1.044C.467 0 0 .477 0 1.064c0 .588.467 1.064 1.044 1.064zm15.912 4.387H1.044C.467 6.515 0 6.993 0 7.58c0 .589.467 1.064 1.044 1.064h15.912c.577 0 1.044-.475 1.044-1.064 0-.586-.467-1.064-1.044-1.064zm0 6.515H1.044C.467 13.03 0 13.508 0 14.094c0 .589.467 1.064 1.044 1.064h15.912c.577 0 1.044-.476 1.044-1.064 0-.586-.467-1.064-1.044-1.064z"/></defs></svg>
                        </a>
                        <div class="navigation-popover">
                            <a href="#" class="close"></a>
                            {{navigation}}
                        </div>
                    </div>
                    <div class="triggers">
                        {{#if @labs.publicAPI}}
                            <div class="search">
                                <a href="#" class="search-trigger"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 56.966 56.966"><path d="M55.146 51.887L41.588 37.786A22.926 22.926 0 0 0 46.984 23c0-12.682-10.318-23-23-23s-23 10.318-23 23 10.318 23 23 23c4.761 0 9.298-1.436 13.177-4.162l13.661 14.208c.571.593 1.339.92 2.162.92.779 0 1.518-.297 2.079-.837a3.004 3.004 0 0 0 .083-4.242zM23.984 6c9.374 0 17 7.626 17 17s-7.626 17-17 17-17-7.626-17-17 7.626-17 17-17z" fill="#fff"/></svg></a>
                                <div class="search-popover">
                                    <a href="#" class="close"></a>
                                    <form>
                                        <input id="search-field" placeholder="{{t "Search"}}" autocomplete="off"/>
                                    </form>
                                    <div id="results" data-other="{{t "Other"}}"></div>
                                </div>
                            </div>
                            <div class="bookmark-content">
                                <a href="#" class="bookmark"><span class="counter hidden"></span><i class="far fa-bookmark"></i><i class="fas fa-bookmark"></i></a>
                                <div class="bookmark-popover">
                                    <a href="#" class="close"></a>
                                    <h3>{{t "Bookmarks"}}</h3>
                                    <div class="bookmark-container">
                                        <p class="no-bookmarks">{{{t "You haven't yet saved any bookmarks. To bookmark a post, just click <i class='far fa-bookmark'></i>."}}}</p>
                                    </div>
                                </div>
                            </div>
                        {{/if}}
</header>
